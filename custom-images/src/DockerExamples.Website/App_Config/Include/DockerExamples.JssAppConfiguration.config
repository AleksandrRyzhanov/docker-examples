<?xml version="1.0" encoding="utf-8" ?>
<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <sites>
      <site patch:after="site[@name='jssglobalizationapi']"
            name="jsssite" 
            rootPath="/sitecore/content/JssApp" 
            startItem="/home" 
            language="en" 
            database="web"
            virtualFolder="/"
            physicalFolder="/"
            enableTracking="true"
            cacheHtml="true"
            htmlCacheSize="50MB"
            enablePreview="true"
            enableWebEdit="true"
            enableDebugger="true"
            enableItemLanguageFallback="true"
            enableFieldLanguageFallback="true"
            disableClientData="false" />
      <site name="shell">
        <patch:attribute name="enableFieldLanguageFallback">true</patch:attribute>
        <patch:attribute name="enableItemLanguageFallback">true</patch:attribute>
      </site>
    </sites>
    <javaScriptServices>
      <apps>
        <app name="JssApp"
             sitecorePath="/sitecore/content/JssApp"
             graphQLEndpoint="/sitecore/api/graph/items/web"
             inherits="defaults"
        />
      </apps>
    </javaScriptServices>
  </sitecore>
</configuration>